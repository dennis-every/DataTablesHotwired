<label for="country_eq">Country</label><br>
<%= select(:q, :country_eq, Employee.pluck(:country).uniq.sort, {include_blank: true}, style: 'width: 200px;', onchange: 'this.form.requestSubmit();', form: :search_form) %>
<br>
<br>
<label for="company_name_in">Companies</label>
<%= collection_check_boxes(:q, :company_name_in, Company.all, :name, :name, {}, onchange: 'this.form.requestSubmit();', form: :search_form) do |checkbox| %>
  <div>
    <%= checkbox.check_box %>
    <%= checkbox.label %>
  </div>
<% end %>